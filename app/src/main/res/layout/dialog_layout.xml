<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_box_bgn"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_note_add_24" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imageView"
        android:text="This folder is empty"
        android:textAlignment="center"
        android:textSize="14sp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/primary_blue" />

        <TextView
            android:id="@+id/add_file_text"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Add files"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/add_file_text"
            android:layout_gravity="center_vertical"
            android:background="@color/primary_blue" />

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/add_file_text"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#C8CED4"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
