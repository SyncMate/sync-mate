<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#669133</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">22dp</item>
        <item name="android:itemTextAppearance">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_blue</item>
        <item name="android:windowBackground">@drawable/dialog_box_bgn</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:windowBackground">@drawable/dialog_box_bgn</item>
    </style>


</resources>